# 使用国内镜像源
registry=https://registry.npmmirror.com/

# 备用镜像源
@openobserve:registry=https://registry.npmmirror.com/
@types:registry=https://registry.npmmirror.com/
@vitejs:registry=https://registry.npmmirror.com/
@vue:registry=https://registry.npmmirror.com/
@tanstack:registry=https://registry.npmmirror.com/
@codemirror:registry=https://registry.npmmirror.com/
@quasar:registry=https://registry.npmmirror.com/
@cypress:registry=https://registry.npmmirror.com/
@vitest:registry=https://registry.npmmirror.com/
@rushstack:registry=https://registry.npmmirror.com/
@tailwindcss:registry=https://registry.npmmirror.com/
@eslint:registry=https://registry.npmmirror.com/
@prettier:registry=https://registry.npmmirror.com/

# 网络超时和重试配置
fetch-timeout=600000
fetch-retry-mintimeout=30000
fetch-retry-maxtimeout=300000
fetch-retries=10
maxsockets=100

# 缓存配置
cache=/tmp/.npm
prefer-offline=true

# 减少日志输出
loglevel=warn
progress=false

# 禁用审计和资金信息
audit=false
fund=false

# 优化安装
prefer-offline=true

# SSL 配置
strict-ssl=false

# 并发配置
maxsockets=100
